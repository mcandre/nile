#!/bin/bash
unset IFS
set -eufo pipefail

NILE_VERSION='0.0.1'

usage() {
    printf "Usage: %s [OPTIONS] <path>\n" "$0"
    printf "\n"
    printf -- "-v\tShow version info\n"
    printf -- "-h\tShow usage menu\n"
}

banner() {
    printf "%s\n" "$NILE_VERSION"
}

while [ "$#" -ge 1 ]; do
    case "$1" in
    '-v')
        shift
        banner
        exit
        ;;
    '-h')
        shift
        usage
        exit
        ;;
    *)
        break
        ;;
    esac
done

if [ "$#" -lt 1 ]; then
    usage
    exit 1
fi

PATH_INPUT="$1"
PATH_DIR_RELATIVE="$(dirname -- "${PATH_INPUT}")"
PATH_DIR_ABSOLUTE="$(readlink -f "${PATH_DIR_RELATIVE}")"
PATH_BASE="${PATH_INPUT%.*}"
PATH_EPUB="${PATH_BASE}.epub"
PATH_OUTPUT="${PATH_DIR_ABSOLUTE}/${PATH_BASE}.normalized.epub"

unzip -od "$PATH_BASE" "$PATH_EPUB" >/dev/null

#
# Preprocess pages with tidy-html5,
# in order to appease overly strict xmlstarlet.
#
find \
    "$PATH_BASE" \
    -type f \
    \( \
    -iname '*.htm' -o \
    -iname '*.html' -o \
    -iname '*.xhtm' -o \
    -iname '*.xhtml' \
    \) \
    -print0 |
    xargs -0 -n 1 \
        tidy_up \
        -qm \
        -asxhtml \
        --show-warnings false \
        --quote-nbsp false \
        --wrap 0

find \
    "$PATH_BASE" \
    -type f \
    \( \
    -iname '*.htm' -o \
    -iname '*.html' -o \
    -iname '*.xhtm' -o \
    -iname '*.xhtml' \
    \) \
    -print0 |
    xargs -0 -n 1 \
        xml ed \
        -L \
        -N xmlns="http://www.w3.org/1999/xhtml" \
        -d "//nav[@epub:type = 'page-list']"

find \
    "$PATH_BASE" \
    -type f \
    \( \
    -iname '*.htm' -o \
    -iname '*.html' -o \
    -iname '*.xhtm' -o \
    -iname '*.xhtml' \
    \) \
    -print0 |
    xargs -0 -n 1 \
        xml ed \
        -L \
        -N xmlns="http://www.w3.org/1999/xhtml" \
        -d "//*[@hidden = 'hidden']"

find \
    "$PATH_BASE" \
    -type f \
    \( \
    -iname '*.htm' -o \
    -iname '*.html' -o \
    -iname '*.xhtm' -o \
    -iname '*.xhtml' \
    \) \
    -print0 |
    xargs -0 -n 1 \
        xml ed \
        -L \
        -N xmlns="http://www.w3.org/1999/xhtml" \
        -d "//*[@class = 'hidden_content']"

sh -c "cd \"$PATH_BASE\" && zip -r \"$PATH_OUTPUT\" . >/dev/null"

rm -rf "$PATH_BASE" >/dev/null 2>&1
