#!/bin/sh
unset IFS
set -euf

usage() {
    echo "Usage: $0 <path>"
}

if [ "$#" -lt 1 ]; then
    usage
    exit 1
fi

PATH_INPUT="$1"
PATH_DIR_RELATIVE="$(dirname -- "${PATH_INPUT}")"
PATH_DIR_ABSOLUTE="$(readlink -f "${PATH_DIR_RELATIVE}")"
PATH_BASE="${PATH_INPUT%.*}"
PATH_EPUB="${PATH_BASE}.epub"
PATH_OUTPUT="${PATH_DIR_ABSOLUTE}/${PATH_BASE}.normalized.epub"

unzip -od "$PATH_BASE" "$PATH_EPUB" >/dev/null

#
# Preprocess pages with tidy-html5,
# in order to appease overly strict xmlstarlet.
#
find "$PATH_BASE" \
    \( \
    -iname '*.htm' -o \
    -iname '*.html' -o \
    -iname '*.xhtm' -o \
    -iname '*.xhtml' \
    \) \
    -print0 |
        xargs -0 -n 1 \
            tidy_up \
                -qm \
                -asxhtml \
                --show-warnings false \
                --quote-nbsp false \
                --wrap 0

find "$PATH_BASE" \
    \( \
    -iname '*.htm' -o \
    -iname '*.html' -o \
    -iname '*.xhtm' -o \
    -iname '*.xhtml' \
    \) \
    -print0 |
        xargs -0 -n 1 \
            xml ed \
                -L \
                -N xmlns="http://www.w3.org/1999/xhtml" \
                -d "//nav[@epub:type = 'page-list']" \

find "$PATH_BASE" \
    \( \
    -iname '*.htm' -o \
    -iname '*.html' -o \
    -iname '*.xhtm' -o \
    -iname '*.xhtml' \
    \) \
    -print0 |
        xargs -0 -n 1 \
            xml ed \
                -L \
                -N xmlns="http://www.w3.org/1999/xhtml" \
                -d "//*[@hidden = 'hidden']" \

find "$PATH_BASE" \
    \( \
    -iname '*.htm' -o \
    -iname '*.html' -o \
    -iname '*.xhtm' -o \
    -iname '*.xhtml' \
    \) \
    -print0 |
        xargs -0 -n 1 \
            xml ed \
                -L \
                -N xmlns="http://www.w3.org/1999/xhtml" \
                -d "//*[@class = 'hidden_content']"

sh -c "cd \"$PATH_BASE\" && zip -r \"$PATH_OUTPUT\" . >/dev/null"
rm -rf "$PATH_BASE" >/dev/null 2>&1
